<%= form_for @project_role do |f| %>
  <div class = "row mt-2">
    <div class = "col-md-8">
      <%= f.text_field :name, class:'form-control', placeholder: 'Project Role Name' %>
    </div>
  </div>
  <h5 class="mt-2">Permission</h5>
  <hr>
  <div class = "row mt-2">
    <div class = "col-md-8">
       <%= check_box_tag(:receive_eod_mail) %>  Receive EOD mail<br>
       <%= check_box_tag(:can_view_eod) %>  Can view EOD?
    </div>
  </div>
  <div class="row mt-2">
    <div class = "col-md-12 text-center">
      <%= f.submit "Save" ,{class:'btn btn-success'} %>
    </div>
  </div>
<% end %>