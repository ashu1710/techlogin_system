<div class="container">
  <div class="row">
    <div class="col-md-7"> 
      <div class="card">
        <h6 class="card-header h6">Roles</h6>
        <div class="card-body">
          <table class="table table-striped table-bordered">
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
            <% @roles.each do |userrole| %>
                <tr>
                <td><%= userrole.name %></td>
                <td><%= link_to 'Edit', edit_user_role_path(userrole), class: "btn btn-info" %>
                <%= link_to 'Destroy', user_role_path(userrole), method: :delete,
                    data: { confirm: 'Are you sure you want to delete?' },  class: "btn btn-danger" %></td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-5">
      <div class="card">
        <h6 class="card-header h6">User Role</h6>
        <div class="card-body">
          <%= render 'form' %>
        </div>
      </div>
    </div>
  </div>
</div>