<div class="container">
    <div class="row">
        <div class="col-md-4">
        </div>

        <div class="col-md-4 formbgcolorlogin" style="margin-top: 10px;">

            <h2 style="margin-top: 10px;font-size: 25px;">Change your password</h2>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field form-group">
              <%= f.label :password, "New password" %><br />
              <%= f.password_field :password, class: 'form-control' ,autofocus: true, autocomplete: "new-password" %>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation, "Confirm new password" %><br />
              <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
            </div>
            
            <div class="actions form-group" style="margin-bottom: 10px;">
                <%= f.submit "Log in", class: 'btn btn-success' %>
            </div>
            <% end %>

        </div>


        <div class="col-md-4">
        </div>



        <div class="col-md-4">
                
        </div>


        <div class="col-md-4 forget-password-font-size">
            <%= render "devise/shared/links" %>
        </div>


        <div class="col-md-4">
        </div>


