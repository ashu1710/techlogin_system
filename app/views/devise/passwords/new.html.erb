<div class="container">
    <div class="row">
        <div class="col-md-4">
        </div>

        <div class="col-md-4 formbgcolorlogin" style="margin-top: 10px;">

            <h2 style="margin-top: 10px;">Forgot your password?</h2>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, class: 'form-control' , autofocus: true, autocomplete: "email" %>
              </div>

            <div class="actions" style="margin-bottom: 10px;">
                <%= f.submit "Reset Password", class: 'btn btn-success' %>
            </div>
            <% end %>

        </div>


        <div class="col-md-4">
        </div>



        <div class="col-md-4">
                
        </div>


        <div class="col-md-4 forget-password-font-size">
            <%= render "devise/shared/links" %>
        </div>


        <div class="col-md-4">
        </div>


